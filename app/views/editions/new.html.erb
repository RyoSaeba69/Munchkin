<div class="row" role="title-row">
  <div class="col-sm-5">
    <h3><%= image_tag 'doomduck.gif',size: "24"%>  Nouvelle Edition</h3>
  </div>
  <div class="col-sm-7">
    <div class="pull-right" role="menu">
      <%= link_to editions_path, 'class' => 'btn btn-default' do %>
          <%= fi_icon('arrow-left') %> Retour
      <% end %>
    </div>
  </div>
</div>

<%= form_for @edition, :html => {:multipart => true, :class => "form" } do |f| %>
    <div class="form-group <%= mark_required(f.object, :libelle) %>">
      <%= f.label :libelle, :class => 'control-label' %>
      <%= f.text_field :libelle,  :class => 'form-control' %>
    </div>

    <div class="form-group <%= mark_required(f.object, :icon) %>">
      <%= f.label :icon %>
      <%= f.file_field :icon %>
    </div>

    <p ><%= f.submit "Créer l'édition", class: 'btn btn-large btn-success' %></p>
<% end %>
