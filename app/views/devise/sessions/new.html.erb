<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form'}) do |f| %>
      <h3>Connexion</h3>
      <%= devise_error_messages! %>
      <div class="form-group">

        <%= f.label :login, 'Identifiant' %>
        <%= f.text_field :login, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <% if devise_mapping.recoverable? %>
            <%= link_to "Mot de passe oublié?", new_password_path(resource_name), class: 'right' %>
        <% end -%>
        <%= f.label :password, 'Mot de passe' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.submit 'Connexion', :class => 'btn btn-munchkin right' %>
      <% if devise_mapping.rememberable? -%>
          <div class="checkbox" style="width:150px;">
            <label>
              <%= f.check_box :remember_me %> Rester connecté
            </label>
          </div>
      <% end -%>
  <% end %>
  <% if devise_mapping.registerable? %>
      <%= link_to 'Demande de création de compte', new_registration_path(resource_name) %>
  <% end -%>
</div>
