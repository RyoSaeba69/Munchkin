<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
      <h3>Mot de passe oubli√©?</h3>
      <%= render "shared/error_messages", :target => @user %>
      <p>Nous allons vous envoyer les instructions pour changer votre mot de passe.</p>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
      <%= f.submit "Envoyer les instructions par email", :class => "btn btn-munchkin" %>
  <% end %>
</div>
